{
  "compilerOptions": {
    "declaration":true,
    "target": "es2016",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "esModuleInterop": true,                
    "allowJs": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "es2016"]
  },
  "include": ["**/*.tsx", "**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
